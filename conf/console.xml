<!--
GENERAL NOTES

1. Configuration options are grouped for easy maintenance.
2. Unless otherwise noted, commenting out a property will
   cause the engine's default value to be used.
3. A property may only be defined once.
4. The notations in [square brackets] are used to generate
   the Settings class that corresponds with this properties
   file.  Please do not change these notations unless you
   know what you are doing.
-->

<properties version="1.0">
    <!--[generate: org.aitools.programd.configurations.ConsoleSettings]
        [strip-prefix: programd.console.]-->

    <!--
    CONSOLE/TRACE CONFIGURATION
    -->
    
    <!-- Show information on console? [boolean: true]-->
    <entry key="programd.console.enable-console">true</entry>
    
    <!-- Show developer info messages on console? [boolean: true]-->
    <entry key="programd.console.show-developer-info">true</entry>
    
    <!-- (developer) Show caller methods even for userinfo messages? [boolean: false]
         * This is an advanced debugging feature.  You likely want to leave it set to false.-->
    <entry key="programd.console.show-method-names-always">false</entry>
    
    <!-- Show match-trace messages on console? [boolean: true]-->
    <entry key="programd.console.show-match-trace">true</entry>
    
    <!-- Show message type flags on console? [boolean: true]-->
    <entry key="programd.console.show-message-flags">true</entry>
    
    <!-- Which bot predicate contains the bot's name? [String: name]-->
    <entry key="programd.console.bot-name-predicate">name</entry>
    
    <!-- Which bot predicate contains the client's name? [String: name]-->
    <entry key="programd.console.client-name-predicate">name</entry>
    
    <!-- How many categories will be loaded before a message is displayed? [int: 5000]
         * Only meaningful if programd.enable-console == true.-->
    <entry key="programd.console.category-load-notify-interval">5000</entry>
    
    <!-- The date-time format to use on the console. [String: H:mm:ss]
         * See http://java.sun.com/jdk1.5.0_01/docs/api/java/text/SimpleDateFormat.html
           for formatting codes.
         * Setting the value to blank means no timestamp will be displayed.-->
    <entry key="programd.console.timestamp-format">H:mm:ss</entry>
    
    <!-- Use interactive command-line shell? [boolean: true]-->
    <entry key="programd.console.use-shell">true</entry>
    
</properties>