<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Alicebot Server//DTD Configure 1.0//EN" "configure.dtd">
        
        
        <Configure class="org.alicebot.server.net.http.HttpServer">
                
                <Call name="addListener">
                        <Arg>
                                <New class="org.alicebot.server.net.http.SocketListener">
                                        <Set name="Port">2001</Set>
                                        <Set name="MinThreads">5</Set>
                                        <Set name="MaxThreads">255</Set>
                                        <Set name="MaxIdleTimeMs">60000</Set>
                                        <Set name="MaxReadTimeMs">60000</Set>
                                </New>
                        </Arg>
                </Call>
                
                <Call name="addContext">
                        <Arg>/bots/*</Arg>
                        <Set name="ResourceBase">./bots/</Set>
                        <Set name="ServingResources">TRUE</Set>
                </Call>
                
                <!-- New method, just calling 2001 -->
                <Call name="addContext">
                        <Arg>/</Arg>
                        <Call name="addServlet">
                                <Arg>Alice</Arg>
                                <Arg>/</Arg>
                                <Arg>org.alicebot.server.net.servlet.Alice</Arg>
                        </Call>
                </Call>
                
                <!-- Old method, calling CHAT -->
                <Call name="addContext">
                        <Arg>/</Arg>
                        <Call name="addServlet">
                                <Arg>Alice</Arg>
                                <Arg>/CHAT</Arg>
                                <Arg>org.alicebot.server.net.servlet.Alice</Arg>
                        </Call>
                </Call>
                
                <Call name="addContext">
                        <Arg>/images/*</Arg>
                        <Set name="ResourceBase">./images/</Set>
                        <Set name="ServingResources">TRUE</Set>
                </Call>
                
                <!-- Default Request Log -->
                <Set name="LogSink">
                        <New class="org.alicebot.server.net.http.util.WriterLogSink">
                                <Arg><SystemProperty name="request.log" default="./logs"/>/yyyy_mm_dd_request.log</Arg>
                                <Set name="RetainDays">90</Set>
                                <Set name="Append">true</Set>
                        </New>
                </Set>
                
        </Configure>
