# This script launches the Program D targeting utility.

# Get "base" directory (root of Program D installation)
BASE=`cd \`dirname $0\`/.. && echo \`pwd\``

# Include utility functions.
source $BASE/bin/common_functions.sh

# Set up the Java environment.
setup_java

# Check for the alice lib.
check_alice_lib

# Change to the Program D bin directory and launch the tool.
cd $BASE/bin
$JVM_COMMAND -classpath $ALICE_LIB -Xms64m -Xmx64m org.alicebot.targeting.TargetingTool $1
