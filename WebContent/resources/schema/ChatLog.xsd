<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://aitools.org/programd/4.6/chatlog"
    targetNamespace="http://aitools.org/programd/4.6/chatlog" elementFormDefault="qualified">
    <xs:annotation>
        <xs:documentation>This was originally derived from the JDK format for XML logs. It omits some things
            that aren't relevant to chat logging, and adds some elements that are specific to
        it.  It isn't presently used by the code, but we should integrate it in testing to be
        sure that logs are matching the format specified here.</xs:documentation>
    </xs:annotation>
    <xs:element name="log">
        <xs:annotation>
            <xs:documentation>The document type is "log" which consists of a sequence of record
                elements.</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="event" type="Event" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="Event">
        <xs:annotation>
            <xs:documentation>Each logging call is described by an event element.</xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="date" type="xs:string">
                <xs:annotation>
                    <xs:documentation>Date and time when LogRecord was created.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="botid" type="xs:string">
                <xs:annotation>
                    <xs:documentation>The id of the bot that produced this
                    response.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="userid" type="xs:string">
                <xs:annotation>
                    <xs:documentation>The userid for whom this reply was
                    produced.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="input" type="xs:string">
                <xs:annotation>
                    <xs:documentation>The input that led to the response.</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="reply" type="xs:string">
                <xs:annotation>
                    <xs:documentation>The reply that was produced.</xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
